@model List<XPTO.Produto>

@{
    ViewBag.Title = "Produtos";
}

<h2>Tabela de produtos</h2>

<table id="pessoas" class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Coluna 1</th>
            <th scope="col">Coluna 2</th>
            <th scope="col">Nome do Produto</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var produto in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => produto.Id)</td>
                <td>@Html.DisplayFor(m => produto.Coluna1)</td>
                <td>@Html.DisplayFor(m => produto.Coluna2)</td>
                <td>@Html.DisplayFor(m => produto.NomeProduto)</td>
            </tr>
        }

    </tbody>
</table>

